<?xml version='1.0' ?>
<cmake-project>
  <name>BoostSystem</name>
  <find-package>
    <arg>Boost</arg>
    <arg>COMPONENTS</arg>
    <arg>config</arg>
    <arg>integer</arg>
    <arg>utility</arg>
    <arg>NO_MODULE</arg>
  </find-package>
  <depends>
    <dependency>BoostConfig</dependency>
    <dependency>BoostInteger</dependency>
    <dependency>BoostUtility</dependency>
  </depends>
  <include-directories>
    <directory>include</directory>
  </include-directories>
  <libraries>
    <library>boost_system</library>
  </libraries>
</cmake-project>
